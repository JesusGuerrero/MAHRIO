ul.dropdown-menu( ng-show="isOpen()" ng-style="{top: position.top+'px', left: position.left+'px', width: '100%'}"
                  style="display: block;" role="listbox" aria-hidden="{{!isOpen()}}")
    li( ng-repeat="match in matches track by $index" ng-class="{active: isActive($index) }"
        ng-mouseenter="selectActive($index)" ng-click="selectMatch($index)" role="option" id="{{match.id}}")
        div( typeahead-match index="$index" match="match" query="query" template-url="templateUrl")